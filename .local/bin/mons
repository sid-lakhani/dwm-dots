# xrandr --output HDMI-1-1 --primary --mode 1920x1080 --auto --output eDP-1 --auto --right-of HDMI-1-1

# Check if external monitor (HDMI) is connected
if xrandr | grep "HDMI-1-1 connected" | grep -vq "disconnected"; then
    xrandr --output HDMI-1-1 --primary --mode 1920x1080 --auto --output eDP-1 --auto --right-of HDMI-1-1
else
    xrandr --output eDP-1 --primary --auto --output HDMI-1-1 --off
fi

